<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BaiTap.View.LoginView">
    <ContentPage.Content>
            <StackLayout Orientation="Vertical">
                <RelativeLayout
                    x:Name="btnSignIn">
                    <Label 
                        TextColor="Red"
                        Margin="15 15 0 0"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Text="SIGN IN"></Label>
                </RelativeLayout>
                <Label Text="OR"></Label>
               <RelativeLayout
                    x:Name="btnSignInWithMicrosoft">
                <Label 
                        TextColor="Red"
                        Margin="15 15 0 0"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Text="SIGN IN WITH MICROSOFT ACCOUNT"></Label>
        </RelativeLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>